	{{!--There is a user--}}
    {{#if user}}
    	<!-- add post button -->
    	<div class="fixed-action-btn">
    		<a class="btn-floating btn-large waves-effect waves-light red" data-toggle="modal" data-target="#postModal">
    			<i class="material-icons">add</i>
    		</a>
    	</div>
    	
    	<!-- Post Modal -->
        <div class="modal fade" id="postModal" role="dialog">
            <div class="modal-dialog">
    
                <!-- Modal content-->
                <div class="modal-content" ng-controller="CreatePostController">
                    <div class="modal-header">
                        <h4 class="modal-title text-center">Make a post</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <form class="col-md-12">
                                <div ng-show="error" class="alert alert-danger"><span ng-bind="errorMessage"></span></div>
                                <h5>Rate anything you want here!</h5>
                                <br>
                                <div class="input-field">
                                    <i class="material-icons prefix">label</i>
                                    <input id="post-subject" type="text" class="materialize-textarea" ng-model="post.title" value="title">
                                    <label for="post-subject">Title</label>
                                </div>
                                <div class="input-field">
                                    <i class="material-icons prefix">mode_edit</i>
                                    <textarea id="post-text" class="materialize-textarea" ng-model="post.content" value="message"></textarea>
                                    <label for="post-text">Message</label>
                                </div>
                                <div class="input-field">
                                    <i class="material-icons prefix">link</i>
                                    <input id="post-link" type="text" class="materialize-textarea" ng-model="post.imgUrl" value="links"></input>
                                    <label for="post-text">Link</label>
                                </div>
                                <div class="input-field">
                                    <i class="material-icons prefix">label</i>
                                    <input id="post-tags" type="text" class="materialize-textareas materialize-tags" data-role="materialtags" ngame="tag" ng-model="post.tag" value="tags"></input>
                                    <label for="post-text">Tag</label>
                                </div>
                            </form>
                            <div class="text-center">
                                <button type="button" class="btn btn-primary waves-effect waves-light" ng-click="createPost(post)">Post</button>
                            </div>
                        </div>
                    </div>
    
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">X</button>
                    </div>
                </div>
    
            </div>
        </div>
        <!--/.Post Modal-->
        
    {{else}}
    
        <!-- Login modal -->
        <div class="modal fade" id="modalLogin" role="dialog">
            <div class="modal-dialog">
        
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header text-center">
                        <h4><i class="fa fa-user"></i> Login</h4>
                    </div>
                    <div class="modal-body" style="padding:40px 50px;" ng-controller="LoginController">
                        <div class="row">
                            <form class="col-md-12" >
                                <div class="row">
                                    <div ng-show="error" class="alert alert-danger"><span ng-bind="errorMessage"></span></div>
                                    
                                    <div class="input-field">
                                        <i class="material-icons prefix">email</i>
                                        <input id="icon_email" type="text" class="validate" name="email" ng-model="user.email" required>
                                        <label for="icon_email">Your email</label>
                                    </div>
    
                                    <div class="input-field">
                                        <i class="material-icons prefix">lock</i>
                                        <input id="password" type="password" class="validate" name="password" ng-model="user.password" required>
                                        <label for="password">Password</label>
                                    </div>
                                    
                                    <div class="text-center">
                                        <button type="button" class="btn btn-primary btn-lg waves-effect waves-light" ng-click="validateLogin(user)">Login</button>
                                        <div class="subscription-checkbox" style="font-size:21px;">
                                            <input type="checkbox" id="test6" name="rememberMe" ng-model="user.rememberMe"/>
                                            <label for="test6">
                                                <p>Remember Me</p>
                                            </label>
                                        </div>
                                    </div>
                                    
                                </div>
                            </form>
                        </div>
                    </div>
                    <!--Footer-->
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default btn-default pull-left" data-dismiss="modal">X</button>
                        <div class="options">
                        <p>Not a member? <a href="javascript:void(0);" data-dismiss="modal" data-toggle="modal" data-target="#registerModal">Sign Up</a></p>
                        <!-- <p>Forgot <a href="#">Password?</a></p> -->
                        </div>
                    </div>
                    <!--/.Footer-->
                </div>
                <!-- /.Modal content-->
            </div>
        </div>
        <!-- /.Login Modal -->
    
        <!-- Register Modal -->
        <div class="modal fade" id="registerModal" role="dialog">
            <div class="modal-dialog">
    
                <!-- Modal content-->
                <div class="modal-content">
                	<div class="modal-header text-center">
                        <h4><i class="fa fa-user"></i> Sign Up</h4>
                    </div>
                    <!--Body-->
                    <div class="modal-body" ng-controller="RegisterController">
                        <div class="row">
                            <div class="col-md-12">
                                <!--Form-->
                                <form name="regForm">
                                    <div ng-show="error" class="alert alert-danger"><span ng-bind="errorMessage"></span></div>
                                     <div class="input-field">
                                        <i class="material-icons prefix">portrait</i>
                                        <input id="icon_email" type="tel" class="validate" name="email" ng-model="user.firstName" required>
                                        <label for="icon_email">First Name</label>
                                    </div>
                                    <div class="input-field">
                                        <i class="material-icons prefix">portrait</i>
                                        <input id="icon_email" type="tel" class="validate" name="email" ng-model="user.lastName" required>
                                        <label for="icon_email">Last Name</label>
                                    </div>
                                    <div class="input-field">
                                        <i class="material-icons prefix">email</i>
                                        <input ng-model="user.email" id="icon_email" type="tel" class="validate" name="email">
                                        <label for="icon_email">Your email</label>
                                    </div>
    
                                    <div class="input-field">
                                        <i class="material-icons prefix">lock</i>
                                        <input id="password" type="password" ng-model="user.password" class="validate" name="password">
                                        <label for="password">Password</label>
                                    </div>
    
                                    <div class="input-field">
                                        <i class="material-icons prefix">lock</i>
                                        <input id="password-rep" type="password" ng-model="user.passwordConfirm" class="validate" name="confirmField">
                                        <label for="password-rep">Repeat password</label>
                                    </div>
                                    <div class="text-center">
                                        <button type="button" class="btn btn-primary btn-lg waves-effect waves-light" ng-click="register(user)">Sign up</button>
                                    </div>
    
                                </form>
                                <!--/.Form-->
                            </div>
                        </div>
                    </div>
                    <!--/.Body-->
    
                    <!--Footer-->
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default btn-default pull-left" data-dismiss="modal">X</button>
                        <div class="options">
                        <p>Already have an account? <a href="javascript:void(0);" data-toggle="modal" data-target="#modalLogin" data-dismiss="modal">Login</a></p>
                        </div>
                    </div>
                    <!--/.Footer-->
                </div>
            </div>
        </div>
        <!--/.Register Modal-->
        
        <!-- Login Required Modal -->
        <button id="loginRequiredBtnTrigger" type="button" class="btn btn-info btn-lg hidden" data-toggle="modal" data-target="#loginRequiredModal">Open Modal</button>

        <div class="modal fade" id="loginRequiredModal" role="dialog">
            <div class="modal-dialog">
    
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header text-center">
                        <h4><i class="fa fa-user"></i> Wooopss</h4>
                    </div>
                    <div class="modal-body" style="padding:40px 50px;">
                        <div class="row">
                            <div class="modal-body" style="text-align: center">
                              <h4>Looks like you're not signed in.</h4>
                              <p>Already have an account? <a href="javascript:void(0);" data-toggle="modal" data-target="#modalLogin" data-dismiss="modal">Login</a></p>
                            </div>
                        </div>
                    </div>
                    <!--Footer-->
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default btn-default pull-left" data-dismiss="modal">X</button>
                        <div class="options">
                        <p>Not a member? <a href="javascript:void(0);" data-dismiss="modal" data-toggle="modal" data-target="#registerModal">Sign Up</a></p>
                        </div>
                    </div>
                    <!--/.Footer-->
                </div>
                <!-- /.Modal content-->
            </div>
        </div>
        <!--/.Register Modal-->
	{{/if}}


